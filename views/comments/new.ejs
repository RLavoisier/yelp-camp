<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Create a new Comment to <%= campground.name %></h1>
        <div class="form-container">
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <textarea class="form-control" placeholder="Your comment" name="comment[text]"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Envoyer</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>

    </div>
</div>

<% include ../partials/footer %>