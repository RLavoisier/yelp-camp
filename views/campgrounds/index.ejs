<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp</h1>
            <p>View our hand-picked campground from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row camp_row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-xs-12 col-md-3 col-sm-6 text-center">
                <div class="thumbnail">
                    <img src="<%=  campground.image %>" alt="">
                    <div class="caption">
                        <h2><%= campground.name %></h2>
                    </div>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More infos</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>