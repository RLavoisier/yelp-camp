<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Edit <%= campground.name %></h1>
        <div class="form-container">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Campground Name" name="campground[name]" value="<%= campground.name %>" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Campground Description" name="campground[description]" value="<%= campground.description %>" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image url" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Envoyer</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>